{% extends 'base.html.twig' %}


{% block body %}
	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a href="{{ path('home') }}">Acceuil</a>
		</li>
		<li class="breadcrumb-item active">Connexion</li>
	</ol>

	<h1 class="text-center">Connexion</h1>
	<hr class="bg-danger">

	<form action="{{ path('security_login') }}" method="post">
		<div class="form_group">
			<input type="text" placeholder="Adresse email ..." required name="_username" class="form-control">
		</div>
		<div class="form_group">
			<input type="password" placeholder="Mot de passe ..." required name="_password" class="form-control mt-3">

		</div>
		<div class="form-group mt-3">
			<button class="btn btn-success">Connexion !</button>
		</div>

	</form>


{% endblock %}
