{% extends 'base.html.twig' %}


{% block body %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('home') }}">Acceuil</a></li>
        <li class="breadcrumb-item active">Inscription</li>
    </ol>
<h1 class="text-center">Inscription</h1>
    <hr class="bg-danger">

    {{ form_start(form) }}
    {{ form_row(form.userName, {'label': 'Nom d\'utilisateur', 'attr': {'placeholder' : 'Adresse email'}}) }}
    {{ form_row(form.email, {'label': 'Adresse email', 'attr': {'placeholder': 'Entrez votre adresse email'}}) }}
    {{ form_row(form.password, {'label': 'Mot de passe', 'attr': {'placeholder': 'Entrez votre mot de passe'}}) }}
    {{ form_row(form.confirm_password, {'label': 'Confirmation mot de passe', 'attr': {'placeholder': 'Veuillez confirmer votre mot de passe'}}) }}
    <button class="btn btn-success">S'inscrire</button>
    {{ form_end(form) }}

{% endblock %}
